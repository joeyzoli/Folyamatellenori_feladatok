<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
        android:id="@+id/layout1"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">

        <HorizontalScrollView
            android:id="@+id/horizontalView1"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/masodik_ell"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/nxt_mezo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textview" />

        <TextView
            android:id="@+id/cikkszam_mezo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Műveleti utasítás (termék forgatókönyv) alkalmazása"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_1"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true"
                 />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Panel és termék cikkszám, sorozatszám jelölés (pozíció, olvashatóság)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_2"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true"
                 />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ónpaszta típus, lejárati idő, felbontási idő"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/csekk2_3"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:entries="@array/paszta"
                android:ems="10"
                android:gravity="start|top"
                android:imeOptions="actionDone" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ónpaszta pozícionálása, forrasztási pont kitöltése"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_4"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ónpaszta vastagságmérés megfelelőség, dokumentálás"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_5"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ragasztó típus, lejárati idő"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/csekk2_6"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:entries="@array/ragaszto_1"
                android:ems="10"
                android:gravity="start|top" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ragasztó típus, lejárati idő"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/csekk2_15"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:entries="@array/ragaszto_2"
                android:ems="10"
                android:gravity="start|top" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ragasztó típus, lejárati idő"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/csekk2_16"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:entries="@array/ragaszto_3"
                android:ems="10"
                android:gravity="start|top" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ragasztó felhordás pozícionálása, mennyiség"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_7"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Hőprofil érvényessége (aktualitás, jóváhagyás)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_8"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Tárazás ellenőrzése (csak Amistar)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_9"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Panel alátámasztás pozíciója a kemencében"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_10"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="N2 gáz alkalmazása forgatókönyv alapján"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_11"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Első darab ellenőrzés mintapanel vagy beültetési rajz alapján"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_12"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Ragasztott alkatrész csavarónyomaték mérés"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_13"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Tételkísérő lap és magazin kísérő címke alkalmazása"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/csekk2_14"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView android:text="Megjegyzés"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/megjegyzes_mezo"
                android:layout_width="152dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:imeOptions="actionDone"
                android:singleLine="true" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/nxt_gomb2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"
                android:textColor="@android:color/black"
                android:onClick="nxt"
                android:text="@string/nxt_v_laszt_s" />
            <Button
                android:id="@+id/tovabb2_gomb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ujoldal_cikk"
                android:text="@string/tov_bb2" />


        </TableRow>


    </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>